#include <iostream>
#include <Windows.h>
using namespace std;

int main() {
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    int temperature;
    cout << "Введіть температуру в градусах Цельсія: ";
    cin >> temperature;
    if (temperature < 0) {
        cout << "холодно" <<endl; 
    }
    else if (temperature >=0 && temperature <=30){
        cout << "помірно" <<endl;
    }
    else  {
        cout << "жарко" <<endl;
        }
        }
